<wxs src="/wxs/price.wxs" module="p"></wxs>
<l-slide-view  wx:if="{{cartItem}}" height="220" width="750" slide-width="200">
    <view slot="left" class="container">
        <view class="checkbox">
            <l-checkbox-group bind:linchange="onSelect">
                <l-checkbox placement="left" key="{{cartItem.skuId}}" checked="{{checked}}"></l-checkbox>
            </l-checkbox-group>
        </view>
        <view class="sku-container">
                <view class="image-container">
                    <view wx:if="{{!online}}" class="image-sold-out">
                        <text>下 架</text>
                    </view>
                    <view wx:elif="{{soldOut}}" class="image-sold-out">
                        <text>售 罄</text>
                    </view>
                    <view wx:elif="{{s.shortage(cartItem.sku.stock)}}" class="image-stock-pinch">
                        <text>仅剩{{cartItem.sku.stock}}件</text>
                    </view>
                    <image mode="aspectFit" class="left" src="{{cartItem.sku.img}}"></image>
                </view>

                <view class="right {{soldOut?'disabled':''}}">
                    <view class="description-container">
                        <view class="title-container">
                            <l-tag
                                    wx:if="{{discount}}"
                                    l-class="discount-tag"
                                    size="mini"
                                    bg-color="#c93756"
                                    shape="circle"
                                    type="reading"
                                    height="24">
                                打折
                            </l-tag>
                            <text class="title">{{cartItem.sku.title}}</text>
                        </view>
                        <view wx:if="{{specStr}}" class="spec">
                            <text>{{specStr}}</text>
                        </view>

                    </view>

                    <view class="price-container">
                        <l-price
                                color="#157658"
                                count-size="28"
                                value="{{p.mainPrice(price,discountPrice)}}">
                        </l-price>
                        <g-counter bind:counterChange="onCounterChange" max="{{stock}}" count="{{count}}">
                        </g-counter>
                    </view>
                </view>

                <view wx:if="{{soldOut || !online}}" class="sold-out">
                </view>
            </view>
    </view>
    <view bind:tap="onDelete" slot="right" class="slide">
            <text>删除</text>
    </view>
</l-slide-view>
